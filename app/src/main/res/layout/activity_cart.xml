<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.CartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:id="@+id/top"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart Status"
            android:textStyle="bold"
            android:textColor="@color/text_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device ID: 8120 9191 0211"
            android:textColor="@color/text_black"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_white"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_product_list"
        android:layout_below="@+id/top"
        android:layout_above="@+id/middle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middle"
        android:layout_above="@+id/ll_btm">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 Temp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12124"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_arrow"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/ll_btm"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:background="@color/bg_white">
        <TextView
            android:text="Home"
            android:drawableTop="@drawable/ic_home"
            style="@style/btn_tab" />
        <TextView
            android:text="Cart"
            android:drawableTop="@drawable/ic_shopping_cart"
            style="@style/btn_tab" />
        <TextView
            android:text="Profile"
            android:drawableTop="@drawable/ic_person_black"
            style="@style/btn_tab" />

    </LinearLayout>

</RelativeLayout>